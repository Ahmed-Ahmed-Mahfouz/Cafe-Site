      <div id="fh5co-featured-menu" class="fh5co-section">
        <div class="container">
          <div class="row">
            <div class="col-md-12 fh5co-heading animate-box">
              <h2>Our Delicous Menu</h2>
              <div class="row">
                <div class="col-md-6">
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis ab debitis sit itaque totam, a
                    maiores nihil, nulla magnam porro minima officiis! Doloribus aliquam voluptates corporis et tempora
                    consequuntur ipsam, itaque, nesciunt similique commodi omnis. Ad magni perspiciatis, voluptatum
                    repellat.</p>
                </div>
              </div>
            </div>

            @foreach (var product in Model.Products){
            <div class="col-md-3 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
              <div class="fh5co-item-group animate-box">
                <div class="fh5co-item">
                  @try
                  {
                  // Format MPrice
                  var mPriceDecimal = Convert.ToDecimal(product.MPrice);
                  var formattedMPrice = (int)Math.Round(mPriceDecimal);
                  var centsM = mPriceDecimal.ToString().Split('.')[1]?.Substring(0, 2) ?? "00";

                  // Format SPrice
                  var sPriceDecimal = Convert.ToDecimal(product.SPrice);
                  var formattedSPrice = (int)Math.Round(sPriceDecimal);
                  var centsS = sPriceDecimal.ToString().Split('.')[1]?.Substring(0, 2) ?? "00";

                  // Format LPrice
                  var lPriceDecimal = Convert.ToDecimal(product.LPrice);
                  var formattedLPrice = (int)Math.Round(lPriceDecimal);
                  var centsL = lPriceDecimal.ToString().Split('.')[1]?.Substring(0, 2) ?? "00";

                  <a href="@Url.RouteUrl("ProductDetails", new { id=product.Product_Id })">
                    <img src="data:image/png;base64,@product.Product_Image" class="img-responsive"
                      alt="@product.Product_Name">
                    <h3>@product.Product_Name</h3>
                    <p>@product.Product_Type</p>
                                            @if (formattedSPrice == 0)
                                            {
                                                <span class="fh5co-price" style="color: gray; text-decoration: line-through;">Small: $@formattedSPrice<sup>.@centsS</sup></span>
                                            }
                                            else
                                            {
                                                <span class="fh5co-price">Small: $@formattedSPrice<sup>.@centsS</sup></span>
                                            }

                                            @if (formattedMPrice == 0)
                                            {
                                                <span class="fh5co-price" style="color: gray; text-decoration: line-through;">Medium: $@formattedMPrice<sup>.@centsM</sup></span>
                                            }
                                            else
                                            {
                                                <span class="fh5co-price">Medium: $@formattedMPrice<sup>.@centsM</sup></span>
                                            }

                                            @if (formattedLPrice == 0)
                                            {
                                                <span class="fh5co-price" style="color: gray; text-decoration: line-through;">Large: $@formattedLPrice<sup>.@centsL</sup></span>
                                            }
                                            else
                                            {
                                                <span class="fh5co-price">Large: $@formattedLPrice<sup>.@centsL</sup></span>
                                            }

                    <p>@product.Product_Description</p>
                  </a>
                  }
                  catch (Exception ex)
                  {
                  <p>Error: @ex.Message</p>
                  }
                </div>
              </div>
            </div>
            }
          </div>
        </div>
            <!-- Pagination -->
            <div class="pagination-container text-center">
                @if (Model.TotalPages > 1)
                {
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li><a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Previous</a></li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <li class="active"><span>@i</span></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Index", new { page = i })">@i</a></li>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li><a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a></li>
                        }
                    </ul>
                }
            </div>

