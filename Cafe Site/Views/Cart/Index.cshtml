@section Scripts {
    @* <script src="/js/jquery-1.11.3.min.js"></script> *@
    
    <script src="/bootstrap/js/cartbootstrap.min.js"></script>

    <script src="/js/jquery.countdown.js"></script>

    <script src="/js/jquery.isotope-3.0.6.min.js"></script>

    <script src="/js/owl.carousel.min.js"></script>

    <script src="/js/jquery.magnific-popup.min.js"></script>

    <script src="/js/jquery.meanmenu.min.js"></script>

    <script src="/js/sticker.js"></script>

    <script src="/js/cartmain.js"></script>

    <script>

        function CalculateTotal(){
            let total = document.getElementById("Total");
            let stotal = document.getElementById("Subtotal");

            let sum = 0;

            let proPrices = document.getElementsByClassName("proPrices");
            for (let i = 0; i < proPrices.length; i++){
                let x = proPrices[i].innerText.split('');
                x.shift();
                let y = x.join('');
                // sum += Number(proPrices[i].innerText.split('').splice(0, 1).join(''));
                sum += Number(y);
                console.log(y);
            }

            stotal.innerText = "$" + sum;
            total.innerText = "$" + ( sum + 50);
        }

        CalculateTotal();

        function ModifyQuantity(id) {
            let pid = document.getElementById(`p(${id})`);
            let tid = document.getElementById(`t(${id})`);
            let qid = document.getElementById(`q(${id})`);
            let qqid = document.getElementById(`qq(${id})`);
            let ttid = document.getElementById(`tt(${id})`);

            let a = pid.innerText.split('');
            a.shift();
            let b = a.join('');

            tid.innerText = "$"+(Number(qid.value) * Number(b));
            qqid.innerText = qid.value;
            ttid.innerText = tid.innerText;

            CalculateTotal();
        }
    </script>
