@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
.input-wrapper {
  position: relative;
}

.inputself {
  border: 1px solid gray;
  border-radius: 6px;
  position: relative;
  width: 200px;
  margin: 10px;
  line-height: 6ex;
}
input:hover{
    border-color:green;
    border-radius:5px;
}

.labelself {
  position: absolute;
  top: 0.2ex;
  z-index: 1;
  left: 2em;
  background-color: white;
  padding: 0 5px;
}
</style>

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-wrapper">
                    <label asp-for="Input.Email" class="labelself"></label>
                    <input asp-for="Input.Email" class="inputself" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-wrapper">
                    <label asp-for="Input.Password" class="labelself"></label>
                    <input asp-for="Input.Password" class="inputself" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                      Don`t Have Account?
                      <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Sign Up</a>
                    </p>
                    @* <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p> *@
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section class="mx-5">
            <img src="/images/Login.gif" />
        </section>
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
