@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>

body {
    background: #181818;
    color: orange;
}

.inputself {
   border: 3px solid orange;
   border-radius: 15px;
   position: relative;
   width: 100%;
   margin: 10px;
   line-height: 3ex;
   transition: border-color 1s;
   font-size: 18px;
   padding: 6px;
}
   
input:hover {
   border-color: orange;
}

.labelself {
   color: orange;
   font-size: 18px;
   position: absolute;
   top: 0.2ex;
   z-index: 1;
   left: 2em;
   background-color: transparent;
   padding: 0 5px;
   font-weight: bold;
   margin-top: -15px;
}

.input-wrapper {
   position: relative;
   margin-top: 20px;
}

.btn {
  background: orange;
  background-image: -webkit-linear-gradient(top, orange, orange);
  background-image: -moz-linear-gradient(top, orange, orange);
  background-image: -ms-linear-gradient(top, orange, orange);
  background-image: -o-linear-gradient(top, orange, orange);
  background-image: linear-gradient(to bottom, orange, orange);
  -webkit-border-radius: 12;
  -moz-border-radius: 12;
  border-radius: 12px;
  font-family: Arial;
  color: #ffffff;
  font-size: 20px;
  text-decoration: none;
  cursor: pointer;
  margin: auto;
  display: block;
  padding: 7px;
  width: 56%;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
  border: 3px solid orange;
  border-radius: 15px;
  transition: all .3s;
  font-size: 18px;
  padding: 6px;

}

.btn:hover {
  background: orange;
  background-image: -webkit-linear-gradient(top, #fff, #fff);
  background-image: -moz-linear-gradient(top, #fff, #fff);
  background-image: -ms-linear-gradient(top, #fff, #fff);
  background-image: -o-linear-gradient(top, #fff, #fff);
  background-image: linear-gradient(to bottom, #fff, #fff);
  text-decoration: none;

}

    .passinput {
        flex-direction: column;
        display: flex;
        width: fit-content;
    }

        .passinput div {
            display: flex;
            align-items: center;
            position: relative;
        }

    .loginHeader {
        text-align: center;
        font-size: 50px;
        font-weight: revert;
    }
</style>
<div class="row">
    <div class="col-md-6">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="width: fit-content;">
            <div class="passinput">
                <h2 class="loginHeader">Register</h2>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="inputsContainer" style="width: 100%;display: flex;justify-content: space-between;">
                <div class="input-wrapper" style="width: 47%;margin-right: 6px;">
                    <label asp-for="Input.FName" class="labelself"></label>
                    <input asp-for="Input.FName" class="inputself input-field"/>
                    <span asp-validation-for="Input.FName" class="text-danger"></span>
                </div>

                <div class="input-wrapper" style="width:47%;">
                    <label asp-for="Input.LName" class="labelself"></label>
                    <input asp-for="Input.LName" class="inputself" />
                    <span asp-validation-for="Input.LName" class="text-danger"></span>
                </div>
            </div>
            

            <div class="input-wrapper">
                <label asp-for="Input.Email" class="labelself"></label>
                <input asp-for="Input.Email" class="inputself" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-wrapper">
                <label asp-for="Input.Address" class="labelself"></label>
                <input asp-for="Input.Address" class="inputself" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="input-wrapper">
                <label asp-for="Input.Password" class="labelself"></label>
                <input asp-for="Input.Password" class="inputself" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input-wrapper">
                <label asp-for="Input.ConfirmPassword" class="labelself"></label>
                <input asp-for="Input.ConfirmPassword" class="inputself" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn">Register</button>
            <p style="margin-top:15px;">
                Already Have Account?
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"> LogIn</a>
            </p>
          </div>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <img src="/images/Placeholder-rafiki-removebg-preview.png" style="margin-top: 50px;" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
